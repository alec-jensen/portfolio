---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
export const prerender = true;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <h1>Alec Jensen</h1>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    background-image: url("/photos/DJI_0190.jpg");
    background-size: cover;
    min-height: 100vh;
    height: 100vh;
    padding: 0;
  }

  main::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.205); /* Adjust the opacity as needed */
    z-index: 1;
  }

  h1 {
    position: relative;
    font-size: 5em;
    margin: 0;
    color: var(--maize);
    z-index: 2;
  }

  @media (max-width: 720px) {
    h1 {
      text-align: center;
    }
  }
</style>
