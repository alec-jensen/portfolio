---
interface Props {
  src: string;
  alt: string;
  width?: number | null;
  height?: number | null;
}

let { src, alt, width = null, height = null }: Props = Astro.props;
---

<div>
  <img
    class="base-image"
    src={src}
    alt={alt}
    width={width}
    height={height}
    id={`image-${src}`}
  />
  <div class="modal" id={`modal-${src}`}>
    <div class="modal-content">
      <div class="modal-header">
        <!-- <p class="caption">{alt}</p> -->
        <span class="close" id={`close-${src}`}> &times; </span>
      </div>
      <img src={src} alt={alt} />
    </div>
  </div>
</div>

<script define:vars={{ src }}>
  document.addEventListener("astro:page-load", () => {
    const image = document.getElementById(`image-${src}`);
    const modal = document.getElementById(`modal-${src}`);
    const close = document.getElementById(`close-${src}`);

    const openModal = () => {
      modal.style.display = "flex";
      window.location.hash = src;
    };

    const closeModal = () => {
      modal.style.display = "none";
      window.location.hash = "";
    };

    if (window.location.hash === `#${src}`) {
      openModal();
    }

    image.addEventListener("click", openModal);
    close.addEventListener("click", closeModal);

    window.addEventListener("click", (event) => {
      if (event.target === modal) {
        closeModal();
      }
    });
  });
</script>

<style>
  .base-image {
    cursor: pointer;
    width: 400px;
    height: auto;
    object-fit: cover;
  }
  .modal {
    display: none;
    justify-content: center;
    align-items: center;
    position: fixed;
    left: 0;
    top: 0;
    z-index: 1000;
    background-color: rgba(0, 0, 0, 0.5);
    overflow: hidden;
    width: 100%;
    height: 100%;
    border: none !important;
    margin: unset;
  }

  .modal-content {
    max-height: 80vh;
  }

  .modal-content img {
    max-height: 75vh;
  }

  .modal-header {
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--ivory);
    color: var(--black);
    font-size: 1.4em;
    position: relative;
    height: 3em;
  }

  .close {
    position: absolute;
    right: 20px;
    color: var(--black);
    font-size: 2em;
    font-weight: bold;
    cursor: pointer;
  }

  .caption {
    text-align: center;
    background-color: var(--ivory);
    color: var(--black);
    font-size: 1.4em;
    margin: 0.2em;
  }
</style>
