---
import { Image } from "astro:assets";
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
export const prerender = true;
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
  </head>
  <body>
    <Header />
    <main>
      <div class="background-container">
        <Image
          src="/bg_optim.webp"
          alt="Blurred background placeholder"
          width={320}
          height={240}
          quality={10}
          loading="eager"
          class="background background-placeholder"
        />
        <Image
          src="/bg.webp"
          alt="Aerial view of a lake"
          width={3200}
          height={2400}
          loading="eager"
          class="background background-main"
          onload="this.parentElement.classList.add('loaded')" 
        />
      </div>
      <div class="content">
        <h1>Alec Jensen</h1>
        <h2>Photographer based in DFW</h2>
        <p class="services">Specializing in Sports, Events, Portraits, and more</p>
        <div class="cta-buttons">
          <a href="/contact" class="cta-button">Get in Touch</a>
          <a href="/gallery" class="cta-button secondary">View Portfolio</a>
        </div>
      </div>
    </main>
    <Footer />
  </body>
</html>

<style>
  main {
    position: relative;
    display: flex;
    justify-content: center;
    align-items: center;
    background-size: cover;
    min-height: 100vh;
    height: 100vh;
    padding: 0;
  }

  main::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0, 0, 0, 0.5);
    z-index: 1;
  }

  .background-container {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    z-index: -1;
    overflow: hidden;
  }

  .background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .background-placeholder {
    filter: blur(20px);
    opacity: 1;
    transform: scale(1.1);
    z-index: 1;
  }

  .background-main {
    opacity: 0;
    transition: opacity var(--transition-slow);
    z-index: 2;
  }

  .background-container.loaded .background-main {
    opacity: 1;
  }

  .content {
    position: relative;
    z-index: 1;
    padding: var(--space-xl);
    color: #fff;
    text-align: center;
    z-index: 2;
  }

  h1 {
    font-size: 5em;
    margin: 0;
    color: var(--accent);
  }

  h2 {
    font-size: 2em;
    margin: var(--space-sm) 0;
    color: white;
  }

  .services {
    font-size: 1.3em;
    margin-bottom: var(--space-xl);
    color: white;
  }

  .cta-buttons {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    margin-top: var(--space-lg);
  }

  .cta-button {
    padding: var(--space-sm) var(--space-xl);
    background-color: var(--primary);
    color: white;
    text-decoration: none;
    font-size: 1.2em;
    transition: all var(--transition-normal);
  }

  .cta-button:hover {
    background-color: var(--secondary);
  }

  .cta-button.secondary {
    background-color: transparent;
    border: none;
  }

  .cta-button.secondary:hover {
    color: var(--primary);
  }

  @media (max-width: 720px) {
    h1 {
      text-align: center;
      font-size: 3.5em;
    }

    h2 {
      font-size: 1.5em;
    }

    .services {
      font-size: 1.1em;
    }

    .cta-buttons {
      flex-direction: column;
      gap: var(--space-md);
      max-width: 60%;
      margin-left: auto;
      margin-right: auto;
    }
  }
</style>
