---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../consts";
---

<header>
  <nav>
    <h2><a class="title newsreader-font" href="/">{SITE_TITLE}</a></h2>
    <div class="internal-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/gallery">Gallery</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
    </div>
    <div class="mobile-links" id="mobile-links">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
      <HeaderLink href="/gallery">Gallery</HeaderLink>
      <HeaderLink href="/contact">Contact</HeaderLink>
      <!-- <HeaderLink href="/blog">Blog</HeaderLink> -->
    </div>
    <a href="javascript:void(0);" class="icon" id="hamburger">
      <i class="fa fa-bars"></i>
    </a>
    <div class="social-links">
      <a href="https://www.instagram.com/alec.j.is.a.nerd" target="_blank">
        <span class="sr-only">Follow Alec Jensen on Instagram</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="32"
          height="32"
          viewBox="0 0 30 30"
